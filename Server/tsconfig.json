{
    "compilerOptions": {
        "outDir": "./dist",
        "removeComments": true,
        "esModuleInterop": true,
        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        /* Additional Checks */
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "types": [
            "reflect-metadata",
            "node",
            "jest"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "pretty": true,
        "sourceMap": true,
        "target": "es2017",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*",
                "./src/types/*"
            ]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
    },
    "exclude": [
        "./node_modules",
        "./dist"
    ],
    "include": [
        "src/**/*"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}